<UserControl x:Class="PROG6221_Part3_St10071737.MVVM.View.AddRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PROG6221_Part3_St10071737.MVVM.View"
             xmlns:viewModel="clr-namespace:PROG6221_Part3_St10071737.MVVM.ViewModel"
             xmlns:classes="clr-namespace:PROG6221_Part3_St10071737.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="780">

    <UserControl.DataContext>
        <viewModel:AddRecipeViewModel/>
    </UserControl.DataContext>

    <StackPanel>
        
        <TextBlock Text="Add Recipe"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="5,0,0,20"/>
        
        <Grid Height="480">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition />
            </Grid.RowDefinitions>


            <Border Background="#252130"
                        CornerRadius="10"
                        Margin="5"
                        Grid.Row="0">

                <StackPanel Orientation="Horizontal">

                    <Label Content="Recipe Name :"
                               Foreground="white"
                               FontSize="15"
                               VerticalAlignment="Center"/>

                    <TextBox Name="TBRecipeName"
                                 Style="{StaticResource UserInputTheme}"/>


                </StackPanel>
            </Border>

            <Grid Grid.Column="0"
                  Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <Border Background="#252130"
                        CornerRadius="10"
                        Margin="5"
                        Grid.Row="0">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Add Ingredient"
                               Foreground="white"
                               FontSize="15"
                               VerticalAlignment="Center"/>

                        <Border Height="40"
                        Width="70"/>

                        <Border Background="#353340"
                        CornerRadius="10"
                        Height="30">

                            <Button Width="200"
                            Height="30"
                            Background="Transparent"
                            Content="Add Ingredient"
                            Foreground="White"
                            FontSize="15"
                            IsHitTestVisible="True"
                            BorderThickness="0"
                            Command="{Binding TestCommand}"/>


                        </Border>
                    </StackPanel>




                </Border>

                <Border Background="#252130"
                        CornerRadius="10"
                        Margin="5"
                        Grid.Row="1">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Name :"
                               Foreground="white"
                               FontSize="15"
                               VerticalAlignment="Center"/>

                        <TextBox Name="TBIngredientName"
                                 Style="{StaticResource UserInputTheme}"
                                 Text="{Binding IngredientName, Mode=TwoWay}"/>


                    </StackPanel>
                </Border>

                <Border Background="#252130"
                        CornerRadius="10"
                        Margin="5"
                        Grid.Row="2">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Quantity :"
                               Foreground="white"
                               FontSize="15"
                               VerticalAlignment="Center"/>

                        <TextBox Name="TBIngredientQuantity"
                                 Style="{StaticResource UserInputTheme}"
                                 Text="{Binding IngredientQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


                    </StackPanel>
                </Border>

                <Border Background="#252130"
                        CornerRadius="10"
                        Margin="5"
                        Grid.Row="3">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Unit of Measurement :"
                               Foreground="white"
                               FontSize="15"
                               VerticalAlignment="Center"/>
                        <Border Background="#353340"
                                Width="200"
                                Height="40"
                                CornerRadius="10">

                            <ComboBox Name="CBUoM"
                                       Height="20"
                                       Width="190"
                                       SelectedValuePath="Content"
                                       SelectedItem="{Binding ingredientsClass.IngredientUoM, Mode=TwoWay}">

                                <ComboBoxItem Content="Cup(s)"/>
                                <ComboBoxItem Content="1/2 Cup(s)"/>
                                <ComboBoxItem Content="1/4 Cup(s)"/>
                                <ComboBoxItem Content="1/8 Cup(s)"/>
                                <ComboBoxItem Content="Tablespoon(s)"/>
                                <ComboBoxItem Content="Teaspoon(s)"/>
                                <ComboBoxItem Content="N/A"/>

                            </ComboBox>
                            
                        </Border>
                       



                    </StackPanel>
                </Border>

                <Border Background="#252130"
                        CornerRadius="10"
                        Margin="5"
                        Grid.Row="4">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Calories :"
                               Foreground="white"
                               FontSize="15"
                               VerticalAlignment="Center"/>

                        <TextBox Name="TBIngredientCalories"
                                 Style="{StaticResource UserInputTheme}"
                                 Text="{Binding IngredientCalories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


                    </StackPanel>
                </Border>

                <Border Background="#252130"
                        CornerRadius="10"
                        Margin="5"
                        Grid.Row="5">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Food Group:"
                               Foreground="white"
                               FontSize="15"
                               VerticalAlignment="Center"/>

                        <Border Background="#353340"
                                Width="200"
                                Height="40"
                                CornerRadius="10">

                            <ComboBox Name="CBFoodGroups"
                                       Height="20"
                                       Width="190"
                                       Background="#353340"
                                       SelectedValuePath="Content"
                                       SelectedItem="{Binding ingredientsClass.IngredientFoodGroup, Mode=TwoWay}">

                                <ComboBoxItem Content="Protien"/>
                                <ComboBoxItem Content="Carboydrates"/>
                                <ComboBoxItem Content="Fats"/>
                                <ComboBoxItem Content="Dairy"/>


                            </ComboBox>

                        </Border>

                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Column="1"
                  Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                Background="#252130"
                CornerRadius="10"
                Margin="5">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Add Steps"
                           FontSize="15"
                       VerticalAlignment="Center"
                           Foreground="white"
                           Margin="5,0,0,0"/>

                        <Border Height="40"
                        Width="60"/>

                        <Border Background="#353340"
                        CornerRadius="10"
                        Height="30">

                            <Button Width="200"
                            Height="30"
                            Background="Transparent"
                            Content="Add Step"
                            Foreground="White"
                            FontSize="15"
                            IsHitTestVisible="False"
                            BorderThickness="0">

                            </Button>
                        </Border>


                    </StackPanel>

                </Border>


                <Border Grid.Row="1"
                Background="#252130"
                CornerRadius="10"
                Margin="5">

                    <Border Background="#353340"
                    Margin="10,10,10,10"
                    CornerRadius="10">

                        <TextBox Name="TBStep"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Text="Step 1"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         TextWrapping="Wrap"
                         Margin="5,5,5,5"/>


                    </Border>
                </Border>

            </Grid>



        </Grid>
    </StackPanel>
</UserControl>
